---
const {
  title,
  ghLink,
  visitLink,
  description,
  image,
  flipped = false,
} = Astro.props;
import { BrandGithub, ExternalLink } from "tabler-icons-react";
---

<div
  class="flex flex-col gap-7 sm:grid grid-cols-2 bg-slate-900 p-4 rounded-xl my-4"
>
  <div class={flipped ? "max-w-md order-1" : "max-w-md"}>
    <h2 class="text-xl text-orange-200 font-semibold">{title}</h2>
    <div>{description}</div>
    <div class="flex flex-wrap gap-2 my-2 align-center">
      <slot />
    </div>
    <div class="flex mt-4 gap-9">
      <a target="_blank" href={ghLink}>
        <BrandGithub />
      </a>
      <a target="_blank" href={visitLink}>
        <ExternalLink />
      </a>
    </div>
  </div>
  <video
    class="border grid- border-white rounded-md shadow-sm"
    autoplay
    src={image}></video>
</div>
